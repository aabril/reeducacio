extends ../layout

block content
  .content
    .container-fluid
      .row
        .col-md-12
          .card
            .content.table-responsive.table-full-width
              table.table.table-hover.table-striped
                thead
                  tr
                    th correu
                    th nom
                    th data registre
                    th rol
                    th editar
                tbody
                  each user in users
                    tr
                      td #{user.email}
                      td Albert Abril
                      td #{user.createdString}
                      td #{user.role}
                      td(style="padding: 0 20px;") 
                        a(href="/admin/users/"+user._id) 
                          i.pe-7s-edit
