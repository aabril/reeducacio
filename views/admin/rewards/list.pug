extends ../layout

block content
  .content
    .container-fluid

      .row(style="margin-bottom:10px;")
        .col-md-3.col-md-offset-9
          a(href="/admin/article/new")
            button.btn.btn-default.btn-block Afegir recompensa


      .row
        .col-md-12
          .card
            .content.table-responsive.table-full-width
              table.table.table-hover.table-striped
                thead
                  tr
                    th title
                    th Edit
                tbody
                  each reward in rewards
                    tr
                      td #{reward.title}
                      td(style="padding: 0 20px;") 
                        a(href="/admin/rewards/"+reward._id) 
                          i.pe-7s-edit
